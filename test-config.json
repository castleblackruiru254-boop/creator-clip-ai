{
  "coverage": {
    "minimum": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      },
      "perFile": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "exclude": [
      "src/test/**/*",
      "tests/**/*",
      "**/*.config.*",
      "**/*.d.ts",
      "dist/**/*",
      "coverage/**/*",
      "**/node_modules/**/*"
    ]
  },
  "qualityGates": {
    "maxComplexity": 10,
    "maxFileLength": 500,
    "maxFunctionLength": 50,
    "enforceTestsForNewCode": true,
    "requireTypeAnnotations": true
  },
  "testCategories": {
    "unit": {
      "pattern": "**/*.test.{ts,tsx}",
      "timeout": 5000,
      "required": true
    },
    "integration": {
      "pattern": "**/integration/*.test.{ts,tsx}",
      "timeout": 10000,
      "required": true
    },
    "e2e": {
      "pattern": "**/e2e/*.spec.{ts,tsx}",
      "timeout": 30000,
      "required": false
    }
  }
}
