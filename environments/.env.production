# Production Environment Configuration
NODE_ENV=production
VITE_ENVIRONMENT=production

# Supabase Configuration (Production)
VITE_SUPABASE_URL=https://your-production-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# OpenAI Configuration (Production)
OPENAI_API_KEY=your-production-openai-key
OPENAI_ORG_ID=your-openai-org-id

# YouTube API (Production)
YOUTUBE_API_KEY=your-production-youtube-key

# Monitoring & Logging (Production)
VITE_SENTRY_DSN=your-production-sentry-dsn
VITE_LOG_LEVEL=1  # Info level for production

# Performance Settings (Production)
VITE_MAX_CONCURRENT_JOBS=3  # Maximum concurrent processing
VITE_MAX_FILE_SIZE=10737418240  # 10GB max file size
VITE_CACHE_TTL=3600  # 1 hour cache

# Feature Flags (Production)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_DEBUG_MODE=false

# Backup Configuration (Production)
BACKUP_PATH=/var/backups/viralclips
BACKUP_RETENTION_DAYS=30  # 30 days retention
BACKUP_S3_BUCKET=viralclips-production-backups
BACKUP_S3_REGION=us-east-1

# Production Specific
PRODUCTION_MODE=true
MAINTENANCE_MODE=false
RATE_LIMITING_ENABLED=true

# External Service URLs (Production)
CDN_BASE_URL=https://cdn.viralclips.app
API_BASE_URL=https://api.viralclips.app

# Security (Production - Strict)
CORS_ORIGINS=https://viralclips.app,https://www.viralclips.app
CSRF_PROTECTION=true
SECURE_COOKIES=true
HTTPS_ONLY=true

# Database (Production)
DB_POOL_SIZE=20  # Larger pool for production
DB_QUERY_TIMEOUT=10000  # Stricter timeout
DB_STATEMENT_TIMEOUT=30000

# Redis (Production)
REDIS_URL=redis://production-redis:6379/0
REDIS_TTL=3600  # 1 hour
REDIS_MAX_CONNECTIONS=50

# Monitoring (Production)
HEALTH_CHECK_INTERVAL=60000  # 1 minute
METRICS_COLLECTION_INTERVAL=300000  # 5 minutes
LOG_FLUSH_INTERVAL=30000  # 30 seconds

# Rate Limiting (Production)
RATE_LIMIT_WINDOW=3600000  # 1 hour
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_VIDEO_PROCESSING=10  # Per hour per user

# CDN Configuration (Production)
CDN_CACHE_TTL=604800  # 7 days
CDN_STALE_WHILE_REVALIDATE=86400  # 24 hours

# SSL/TLS (Production)
SSL_CERTIFICATE_PATH=/etc/ssl/certs/viralclips.pem
SSL_PRIVATE_KEY_PATH=/etc/ssl/private/viralclips.key
SSL_PROTOCOLS=TLSv1.2,TLSv1.3

# Auto-scaling (Production)
AUTO_SCALE_ENABLED=true
MIN_INSTANCES=2
MAX_INSTANCES=10
SCALE_UP_THRESHOLD=80  # CPU percentage
SCALE_DOWN_THRESHOLD=30  # CPU percentage

# Alerting (Production)
ALERT_EMAIL=ops@viralclips.app
SLACK_WEBHOOK_URL=your-slack-webhook-url
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-key

# Compliance & Security
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365
ENCRYPTION_AT_REST=true
AUDIT_LOGGING=true
