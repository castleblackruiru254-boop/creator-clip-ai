# ViralClips Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-supabase-anon-key

# These are used in Edge Functions (server-side only)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# YouTube API (for video metadata and search)
YOUTUBE_API_KEY=your-youtube-api-key

# OpenAI API (for AI analysis and content generation)
OPENAI_API_KEY=your-openai-api-key

# Optional: Production environment settings
NODE_ENV=production
VITE_APP_VERSION=1.0.0
VITE_APP_NAME="ViralClips"

# Optional: Analytics and monitoring
VITE_ANALYTICS_ID=your-analytics-id
VITE_SENTRY_DSN=your-sentry-dsn

# Optional: Payment integration (future)
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key

# Optional: Email service (for notifications)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# Optional: Redis for advanced rate limiting (production)
REDIS_URL=redis://your-redis-instance

# Optional: External storage (S3, CloudFlare R2, etc.)
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key
S3_BUCKET_NAME=your-bucket-name
S3_REGION=us-east-1

# Optional: CDN for faster content delivery
CDN_URL=https://your-cdn-domain.com
