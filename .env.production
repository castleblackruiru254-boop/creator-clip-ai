# Production Environment Configuration for Creator Clip AI
# This file contains production-ready settings for scaling, CDN, and performance

# Supabase Configuration
VITE_SUPABASE_URL=https://your-production-supabase-url.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-supabase-anon-key
VITE_SUPABASE_PROJECT_ID=your-production-project-id
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# Database Connection Pooling
VITE_DB_MIN_CONNECTIONS=5
VITE_DB_MAX_CONNECTIONS=50
VITE_DB_POOL_SIZE=20
VITE_DB_ACQUIRE_TIMEOUT=10000
VITE_DB_IDLE_TIMEOUT=300000

# CDN Configuration
VITE_CDN_ENABLED=true
VITE_CDN_BASE_URL=https://cdn.creator-clip-ai.com
VITE_CDN_CACHE_TTL=86400
VITE_CDN_RETRY_ATTEMPTS=3
VITE_CDN_PRELOAD_CRITICAL=true
VITE_CDN_COMPRESSION=true
VITE_CDN_IMAGE_OPTIMIZATION=true
CDN_BASE_URL=https://cdn.creator-clip-ai.com

# Load Balancing Configuration
LOAD_BALANCER_ENABLED=true
SESSION_AFFINITY=false
MAX_CONCURRENT_REQUESTS=2000
REQUEST_TIMEOUT=30000
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# Scaling Configuration
AUTO_SCALING_ENABLED=true
MIN_INSTANCES=3
MAX_INSTANCES=20
SCALE_UP_THRESHOLD=70
SCALE_DOWN_THRESHOLD=35
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80
REQUEST_RATE_THRESHOLD=100
SCALE_UP_COOLDOWN=60
SCALE_DOWN_COOLDOWN=300

# PostgreSQL Configuration (Production)
POSTGRES_DB=creator_clip_ai_production
POSTGRES_USER=app_user
POSTGRES_PASSWORD=your-secure-production-postgres-password
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=512MB
POSTGRES_EFFECTIVE_CACHE_SIZE=2GB
POSTGRES_HOST=postgres-master
POSTGRES_READ_HOST=postgres-replica

# AI API Keys (Production)
VITE_OPENAI_API_KEY=your-production-openai-api-key
VITE_ANTHROPIC_API_KEY=your-production-anthropic-api-key

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=https://creator-clip-ai.com,https://www.creator-clip-ai.com

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key
SSL_CA_PATH=/etc/ssl/certs/ca.crt

# Redis Configuration (Production)
REDIS_URL=redis://redis-cluster:6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_MAX_CONNECTIONS=100
REDIS_MIN_CONNECTIONS=5

# Monitoring and Logging
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0
LOG_LEVEL=info
LOG_FORMAT=json
METRICS_ENABLED=true
TRACING_ENABLED=true

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password
GRAFANA_SECRET_KEY=your-grafana-secret-key
GRAFANA_DOMAIN=monitoring.creator-clip-ai.com

# Prometheus Configuration
PROMETHEUS_RETENTION_TIME=15d
PROMETHEUS_STORAGE_PATH=/prometheus-data
PROMETHEUS_SCRAPE_INTERVAL=15s

# Email Service (Production)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@creator-clip-ai.com
SMTP_PASS=your-smtp-password
SMTP_FROM=Creator Clip AI <noreply@creator-clip-ai.com>

# External Storage (Production)
S3_ACCESS_KEY_ID=your-production-s3-access-key
S3_SECRET_ACCESS_KEY=your-production-s3-secret-key
S3_BUCKET_NAME=creator-clip-ai-production-storage
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.amazonaws.com

# Video Processing Configuration
VIDEO_PROCESSING_TIMEOUT=900
MAX_VIDEO_SIZE=2GB
SUPPORTED_VIDEO_FORMATS=mp4,mov,avi,mkv,webm
VIDEO_QUEUE_WORKERS=5
THUMBNAIL_QUALITY=85
VIDEO_COMPRESSION_QUALITY=23

# Rate Limiting (Production)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=1000
UPLOAD_RATE_LIMIT=10
AUTH_RATE_LIMIT=20

# Feature Flags
FEATURE_AUTO_SCALING=true
FEATURE_CDN=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_PROCESSING=true
FEATURE_BATCH_PROCESSING=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=creator-clip-ai-backups
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Alert Configuration
ALERT_EMAIL=alerts@creator-clip-ai.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/PRODUCTION/WEBHOOK
PAGERDUTY_INTEGRATION_KEY=your-production-pagerduty-key
ALERT_COOLDOWN=300

# Performance Configuration
NODE_OPTIONS=--max-old-space-size=2048
UV_THREADPOOL_SIZE=16
WORKER_THREADS=4

# Application Configuration
NODE_ENV=production
VITE_APP_VERSION=1.0.0
VITE_APP_NAME=Creator Clip AI
VITE_APP_DESCRIPTION=AI-Powered Video Content Creation Platform
VITE_APP_URL=https://creator-clip-ai.com

# Analytics Configuration
VITE_ANALYTICS_ID=your-production-analytics-id
VITE_GTAG_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-production-mixpanel-token
